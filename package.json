{
  "name": "ezmaster-webserver",
  "version": "3.1.0",
  "description": "Web Server for [ezmaster](https://github.com/Inist-CNRS/ezmaster)",
  "scripts": {
    "docker:web-server": "nginx -g 'daemon off;'",
    "#docker:crontab": "supervisor -e json -w /app crontab.js",
    "debug:web-server": "supervisor -x ws -e json -w . -- -d ./www",
    "debug:crontab": "supervisor -e json -w . ./crontab.js",
    "start-in-docker": "npm-run-all --parallel docker:*",
    "start-in-debug": "npm-run-all --parallel debug:*",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Inist-CNRS/ezmaster-webserver.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Inist-CNRS/ezmaster-webserver/issues"
  },
  "homepage": "https://github.com/Inist-CNRS/ezmaster-webserver#readme",
  "dependencies": {
    "node-schedule": "1.2.2",
    "npm-run-all": "4.0.2",
    "shelljs": "0.7.7",
    "supervisor": "0.12.0"
  }
}
